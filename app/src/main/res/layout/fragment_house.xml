<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedFragment"
    android:background="@drawable/background_b"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:showDividers="middle"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para buscar alojamiento en Argentina te recomendamos que uses alguno de los portales mas conocidos:"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            />

        <TextView
            android:id="@+id/imageButtonZonaprop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zonaprop"
            android:textSize="40sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/primaryTrans"
            android:textColor="@color/primaryTextColor"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/imageButtonArgenprop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/argenprop"
            android:textSize="40sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/primaryTrans"
            android:textColor="@color/primaryTextColor"
            android:layout_margin="10dp"
            />

    </LinearLayout>


</FrameLayout>